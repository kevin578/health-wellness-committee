<div class="w-full h-screen flex items-center justify-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col') do |f| %>
    <div class="px-12 pb-10">
      <div class="w-full mb-2">
        <div class="field flex items-center">
          <i class='ml-3 fill-current text-gray-400 text-xs z-10 fas fa-user'></i>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: "Username", class: "-mx-6 px-8  w-full border rounded px-3 py-2 text-gray-700 focus:outline-none" %>
        </div>
      </div>
      <div class="w-full mb-2">
        <div class="field flex items-center">
          <i class='ml-3 fill-current text-gray-400 text-xs z-10 fas fa-lock'></i>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "-mx-6 px-8 w-full border rounded px-3 py-2 text-gray-700 focus:outline-none" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "ml-4 relative bottom-0.5" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "w-full py-2 rounded-full bg-green-600 text-gray-100 focus:outline-none cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
